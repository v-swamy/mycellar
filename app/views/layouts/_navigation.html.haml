.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to "MyCellar", root_path, class: "navbar-brand"
    #navbar.collapse.navbar-collapse
      - if logged_in?
        %form.navbar-form.navbar-left(role='search')
          .form-group
            %input.search.form-control(data-column="all" type="search" placeholder="Search" )
            =link_to new_wine_path, class: "btn btn-success form-control" do
              Add New Wine
              %i.glyphicon.glyphicon-plus
        %form.navbar-form.navbar-right
          .form-group
            = link_to current_user, class: "btn btn-default form-control" do
              View Profile
              %i.glyphicon.glyphicon-user
            = link_to sign_out_path, class: "btn btn-info form-control" do
              Sign Out
              %i.glyphicon.glyphicon-log-out
      - else
        %form.navbar-form.navbar-right
          .form-group
            = link_to new_user_path, class: "btn btn-info form-control" do
              Register

 
